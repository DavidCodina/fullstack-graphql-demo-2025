{
  "name": "demo",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "prebuild": "(rimraf dist || rm -rf dist) && (rimraf upload.zip || rm -rf upload.zip)",
    "build": "npm run typescript && node esbuild.config.mjs",
    "typescript": "tsc --noEmit --pretty",
    "typescript:watch": "tsc --noEmit --watch",
    "deploy": "npm run build && npm run zip",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:verbose": "vitest --reporter verbose",
    "test:run": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "zip": "bestzip upload.zip dist/* package.json"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "graphql-upload": "^17.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "source-map-support": "^0.5.21",
    "uuid": "^11.0.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/graphql-upload": "^17.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.15.30",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^2.1.4",
    "bestzip": "^2.2.1",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
